<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/relationshipCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="85dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:rippleColor="@color/rippleColor">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="85dp">


            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/composeToImage"
                android:layout_width="5dp"
                android:layout_height="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/toTeiImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_tei_default"
                tools:background="@drawable/photo_temp_gray"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/imageText"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="true"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/toTeiImage"
                app:layout_constraintEnd_toEndOf="@id/toTeiImage"
                app:layout_constraintStart_toStartOf="@id/toTeiImage"
                app:layout_constraintTop_toTopOf="@id/toTeiImage"
                tools:text="A"
                tools:textColor="@color/white"
                />


            <ImageView
                android:id="@+id/CheckButton"
                style="@style/ActionIconNoPadding"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_check_circle"
                app:tint="@color/colorPrimaryGreen"
                app:layout_constraintHorizontal_bias="0.83"
                app:layout_constraintStart_toEndOf="@id/relationshipGender"
                app:layout_constraintEnd_toEndOf="@id/clearButton"
                tools:ignore="MissingConstraints"
                android:visibility="invisible"
                android:contentDescription="@string/check_button_content_description"/>

            <ImageView
                android:id="@+id/clearButton"
                style="@style/ActionIconNoPadding"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_delete_forever"
                app:tint="@color/pink_500"
                android:contentDescription="Clear button"/>


            <!--RIGTH LABELS-->
            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/rubik_regular"
                android:singleLine="true"
                android:textColor="@color/textPrimary"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/infoLayout"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/imageText"
                app:layout_constraintTop_toTopOf="@id/infoLayout"
                app:layout_constrainedWidth="true"
                app:layout_constraintWidth_max="wrap"
                app:layout_constraintWidth_percent="0.2"
                tools:text="Attribute 1:" />

            <TextView
                android:id="@+id/textGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/rubik_regular"
                android:singleLine="true"
                android:textColor="@color/textPrimary"
                android:textSize="12sp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/imageText"
                app:layout_constraintTop_toBottomOf="@id/textName"

                app:layout_constraintWidth_percent="0.2"
                tools:text="Attribute 2:" />

            <TextView
                android:id="@+id/textAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/enrolled_in"
                android:textColor="@color/textPrimary"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/imageText"
                app:layout_constraintTop_toBottomOf="@id/textGender"
                app:layout_constraintWidth_max="wrap"
                app:layout_constraintWidth_percent="0.2"
                tools:text="Attribute 3:" />


            <!--VALUES LABELS-->
            <TextView
                android:id="@+id/toRelationshipName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/rubik_regular"
                android:singleLine="true"
                android:textColor="@color/textSecondary"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/textName"
                app:layout_constraintTop_toTopOf="@id/textName"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/relationshipGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/rubik_regular"
                android:singleLine="true"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                tools:text="Mother-Child"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/textGender"
                app:layout_constraintTop_toBottomOf="@id/toRelationshipName" />

            <TextView
                android:id="@+id/relationshipAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/textAge"
                app:layout_constraintTop_toBottomOf="@id/relationshipGender"
                tools:text="attribute 3" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/relationshipAge"
                app:layout_constraintHorizontal_bias="0.0"
                android:background="@color/bg_gray_ccc" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>