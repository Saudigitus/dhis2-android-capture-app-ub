<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/relationshipCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:minHeight="55dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:rippleColor="@color/rippleColor">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/composeToImage"
                android:layout_width="5dp"
                android:layout_height="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/toTeiImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@drawable/photo_temp_gray"
                tools:ignore="ContentDescription"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/imageText"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="A"
                />

            <TextView
                android:id="@+id/toRelationshipName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                android:singleLine="true"
                app:layout_constraintStart_toEndOf="@id/textName"
                app:layout_constraintTop_toTopOf="@id/infoLayout"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/relationshipGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/textGender"
                app:layout_constraintTop_toBottomOf="@id/toRelationshipName"
                tools:text="Mother-Child" />



            <TextView
                android:id="@+id/relationshipAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/textSecondary"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/textAge"
                app:layout_constraintTop_toBottomOf="@id/relationshipGender"
                tools:text="Mother-Child" />

            <ImageView
                android:id="@+id/CheckButton"
                style="@style/ActionIconNoPadding"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_check_circle"
                app:tint="@color/colorPrimaryGreen"
                app:layout_constraintHorizontal_bias="0.83"
                app:layout_constraintStart_toEndOf="@id/relationshipGender"
                app:layout_constraintEnd_toEndOf="@id/clearButton"
                tools:ignore="MissingConstraints"
                android:visibility="invisible"
                android:contentDescription="@string/check_button_content_description"/>

            <ImageView
                android:id="@+id/clearButton"
                style="@style/ActionIconNoPadding"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_delete_forever"
                app:tint="@color/pink_500"
                android:contentDescription="Clear button"/>

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="12sp"
                android:textFontWeight="600"
                android:layout_marginEnd="16dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toEndOf="@id/imageText"
                app:layout_constrainedWidth="true"
                app:layout_constraintWidth_max="wrap"
            />

            <TextView
                android:id="@+id/textGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexo"
                android:textSize="12sp"
                android:textFontWeight="600"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@id/imageText"
                app:layout_constraintTop_toBottomOf="@id/textName"
                tools:ignore="MissingConstraints"/>

            <TextView
                android:id="@+id/textAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idade"
                android:textSize="12sp"
                android:textFontWeight="600"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@id/imageText"
                app:layout_constraintTop_toBottomOf="@id/textGender"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>